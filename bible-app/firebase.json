{
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/auth/**",
        "destination": "/auth/index.html"
      },
      {
        "source": "/login/**",
        "destination": "/login/index.html"
      },
      {
        "source": "/all_verses/**",
        "destination": "/all_verses/index.html"
      },
      {
        "source": "/profile/**",
        "destination": "/profile/index.html"
      },
      {
        "source": "/stage1/**",
        "destination": "/stage1/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
